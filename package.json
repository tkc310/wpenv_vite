{
  "name": "wpenv_vite",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "22.11.0",
    "npm": "10.9.x"
  },
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "wp:start": "wp-env start",
    "wp:stop": "wp-env stop",
    "wp:export": "npx wp-env run cli wp db export sql/backup.sql",
    "wp:import": "npx wp-env run cli wp db reset --yes && wp-env run cli wp db import sql/backup.sql",
    "format": "_tsc && _lint:fix && _prettier:fix",
    "_tsc": "tsc --noEmit ",
    "_lint": "eslint --ext .ts,.js --ignore-path .gitignore . && stylelint \"**/*.{scss,css}\"",
    "_prettier": "prettier --check \"**/*.{html,scss,ts,js}\" --ignore-path .prettierignore",
    "_lint:fix": "eslint --fix --ext .ts,.js --ignore-path .gitignore . && stylelint --fix \"**/*.{scss,css}\"",
    "_prettier:fix": "prettier --write \"**/*.{html,scss,ts,js}\" --ignore-path .prettierignore"
  },
  "devDependencies": {
    "@prettier/plugin-php": "0.22.2",
    "@typescript-eslint/eslint-plugin": "8.14.0",
    "@typescript-eslint/parser": "8.14.0",
    "@wordpress/env": "10.12.0",
    "eslint": "9.15.0",
    "eslint-config-prettier": "9.1.0",
    "glob": "11.0.0",
    "prettier": "3.3.3",
    "sass": "1.81.0",
    "stylelint": "16.10.0",
    "stylelint-config-recess-order": "5.1.1",
    "stylelint-config-standard-scss": "13.1.0",
    "typescript": "5.6.3",
    "vite": "5.4.11",
    "vite-plugin-full-reload": "1.2.0",
    "vite-tsconfig-paths": "5.1.2"
  }
}
